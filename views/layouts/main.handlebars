  <body>
    <header class="navbar">

    <!-- nav begins -->
    <nav class="navbar navbar-expand-lg navbar-light">

      <div class="nav">
        <a href="/navigation/asks" class="btnLeft">
          <button class="btn btn-primary" type="submit">
            Community
          </button>
        </a>
        <a href="/navigation/resources" class="btnLeft">
          <button class="btn btn-primary" type="submit">
            Resources
          </button>
        </a>
      </div>


      <a class="navbar-brand" id="headerLogo" href="/">
        Cup Of Sugar
      </a>

      <div class="nav">
        {{#if loggedIn}}
        <a href="/dashboard" class="btnLeft">
          <button class="btn btn-primary" type="submit">
            Dashboard
          </button>
        </a>
        {{else}}
        <a href="/login" class="btnRight">
          <button id="loginNav" class="btn btn-primary" type="submit">
            Login
          </button>
        </a>
        {{/if}}
        {{#if loggedIn}}
        <a href="/api/user/logout" class="btnRight">
          <button id="logout" class="btn btn-primary" type="submit">
            Logout
          </button>
        </a>
        {{else}}
        <a href="/signup" class="btnRight">
          <button class="btn btn-primary" type="submit">
            Register
          </button>
        </a>
        {{/if}}
