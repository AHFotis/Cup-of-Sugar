<div class="container" style="width: 50%">
  <h1>Log In</h1>

  <form class="form login-form">
    {{!-- login email --}}
    <div class="form-group">
      <label for="email-login" class="login">Email:</label>
      <br>
      <input class="form-input logInput" type="text" id="email-login" />
    </div>

    <br>
  {{!-- login password --}}
    <div class="form-group">
      <label for="password-login" class="login">Password:</label>
      <br>
      <input class="form-input logInput " type="password" id="password-login" />
    </div>

    <br>
  {{!-- login button --}}
    <div class="form-group">
      <button class="loginBtn pageBtn" id="loginBtn" type="submit">Login</button>
    </div>

  </form>

</div>
{{!-- div to register --}}
<div class="container" style="width: 50%">
  <div class="signupLink">
    <h2>Not registered?</h2>
    <a href="/signup"><button class="pageBtn">Register Here</button></a>
  </div>
</div>

