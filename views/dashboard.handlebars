    <div class="row">
        <div class="col-sm-12">
            <div class='ask-title'>
                <h2>My Asks and Gives</h2>
            </div>
            {{#each askgives}}
            {{> askdash}}
            {{/each}}
            <br>
        </div>
    </div>
</div>