<div class="container col-md-6">
    <form>
        <H2>Create New Post</h2>

       <H4>Ask or Give:</H4>
    <select class="form-select form-select-lg mb-3" aria-label=".form-select-lg example" id="inputAskGive">
      <option selected> Select</option>
      <option value="ask">Asks</option>
      <option value="give">Gives</option>
    </select>
        
        <H4>Select category</H4>
        <select class="form-select form-select-lg mb-3" aria-label=".form-select-lg example" id="inputCategory">
      <option selected> Select</option>
      <option value="Services">Services</option>
      <option value="Clothing">Clothing</option>
      <option value="Food">Food</option>
      <option value="Healthcare">Healthcare</option>
      <option value="Misc">Misc</option>
      <option value="6">Toys, Games, & Hobbies</option>
      <option value="7">Sports & Outdoors</option>
      <option value="8">Pet supplies</option>
      <option value="9">Home & Garden</option>
      <option value="10">General</option>
    </select>
        <H4>Title</H4>
        <input class="form-control" type="text" placeholder="Default input" aria-label="default input example" id="titleInput">
        <H4>Description</H4>
        <div class="mb-3">
            <label for="exampleFormControlTextarea1" class="form-label"></label>
            <textarea class="form-control"  rows="3" id="contentInput"></textarea>
        </div>
        <div class="row">
            <H4>Location</H4>
            <div class="col-md-2">
                <label for="inputZip" class="form-label">Zip</label>
                <input type="text" class="form-control" id="inputZip">
            </div>
             <div class="col-md-2">
                <label for="inputZip" class="form-label">Contact Info</label>
                <input type="text" class="form-control" id="inputContact">
            </div>
        </div>

     <div>
        <button id="postAsk" type="submit">Post Ask</button>
      </div>
      </form>

    </form>


</div>

<script src="/js/newPost.js"></script>