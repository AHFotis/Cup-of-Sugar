<div class="container col-md-12" style="width: 50%">
  <form class="createPostForm">
    <H2>Create New Post</h2>
    <br>
    <div class="row">
      <div class="col-sm-6">
        <H4 class="cnpForm" style="text-align: left">Ask or Give:</H4>
        <select class="form-select form-select-lg mb-3 cnpForm" style="max-width: 375px"
          aria-label=".form-select-lg example" id="inputAskGive">
          <option selected> Select</option>
          <option value="ask">Asks</option>
          <option value="give">Gives</option>
        </select>
      </div>
      <div class="col-sm-6">
        <H4 class="cnpForm" style="text-align: left">Select category</H4>
        <select class="form-select form-select-lg mb-3 cnpForm" aria-label=".form-select-lg example" id="inputCategory">
          <option selected value=""> Select</option>
          <option value="Clothing">Clothing</option>
          <option value="Food">Food</option>
          <option value="Healthcare">Healthcare</option>
          <option value="Home and Garden">Home and Garden</option>
          <option value="Pet supplies">Pet supplies</option>
          <option value="Services">Services</option>
          <option value="Sports and Outdoors">Sports and Outdoors</option>
          <option value="Toys, Games, and Hobbies">Toys, Games, and Hobbies</option>
          <option value="Miscellaneous">Misc</option>
        </select>
      </div>
    </div>
    <H4 class="cnpForm" style="text-align: left">Title</H4>
    <input class="form-control cnpForm" type="text" placeholder="Type title here..." aria-label="default input example"
      id="titleInput">
    <br>
    <div class="mb-3 cnpForm">
      <H4 class="cnpForm" style="text-align: left">Description</H4>
      <textarea class="form-control cnpForm" rows="3" placeholder="Type content here..." id="contentInput"></textarea>
    </div>
    <div class="row cnpForm">
      <H4 class="cnpForm">Location</H4>
      <div class="col-md-3 cnpForm">
        <label for="inputZip" class="form-label cnpForm" style="text-align: left">Zip</label>
        <input type="text" class="form-control cnpForm" id="inputZip" placeholder="Type zip code here...">
      </div>
      <div class="col-md-9">
        <label for="inputZip" class="form-label" style="text-align: left">Contact Info</label>
        <textarea type="text" class="form-control" id="inputContact" placeholder="Type contact info here..."></textarea>
      </div>
    </div>
    <br>
    <div>
      <button class="pageBtn" id="postAsk" type="submit">Submit</button>
    </div>
  </form>

  </form>


</div>

<script src="/js/newPost.js"></script>